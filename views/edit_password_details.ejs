<%- include('header')%>

  
  	<div class="container">
      <div class="row">
        <h2 class="text-center"><%= title %></h2>
        <div id="loginbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
          <div class="panel panel-info">
            <div class="panel-heading">
              <div class="panel-title"> Edit Password Details</div>
            </div>
            <div class="panel-body">
              <form action="/password-detail/edit/<%= record._id %>" id="PasswordFrom" class="form-horizontal" method="post" role="form">
                <div class="form-group">
                  <% if(Success != '') {%>
                      <p style="text-align:centre; color:green;"> <%= Success %></p>
                  <% } %>
                  <label for="categoryName" class="col-md-3 control-label"> Password Details </label>
                  <div class="col-md-9">
                   <select class="formControl" name="pass_cat"> 
                      <option value="">Choose Password Category</option>
                      <% if(records.length > 0) {
                          records.forEach(function(row) {
                          %>
                          <option value="<%= row.password_category %>" <% if(row.password_category == record.password_category){ %> selected <% } %>> <%= row.password_category %>  </option>
                        <%})}%>
                      
                   </select>
                  </div>
                </div>
                <input type="hidden" name="id" value="<%= record._id %>">

                <div class="form-group">
                  <label for="pass_details" class="col-md-3 control-label"> Project name </label>
                  <div class="col-md-9">
                    <input type="textbox" name="project_name" class="form-control" name="pass_details"  placeholder="Enter your Project name" value="<%= record.project_name%>"> <br>
                  </div>
                  <label for="pass_details" class="col-md-3 control-label"> Password Details </label>
                  <div class="col-md-9">
                    <textarea class="form-control" name="pass_details" id="editor" rows="5" placeholder="Enter your password details"><%= record.pass_detail %> </textarea>
                  </div>
                </div>

                 <div class="form-group">
                  <div class="col-md-offset-3 col-md-9">
                    <input type="submit" name="addPassword" value="Update Password" class="btn btn-primary">
                  </div>
                </div>
                <p><a href="/view-all-password"> View All password </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>  
    <script>
      CKEDITOR.replace( 'editor' );
    </script>
  </body>
</html>
